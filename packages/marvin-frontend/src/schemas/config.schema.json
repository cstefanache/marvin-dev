{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Marvin Config",
  "description": "Marvin Config Schema",
  "required": [],
  "properties": {
    "name": {
      "type": "string",
      "size": { "xs": 12 },
      "uiType": "item",
      "title": "Name",
      "readOnly": true
    },
    "rootUrl": {
      "type": "string",
      "size": { "xs": 12, "sm": 6 },
      "uiType": "item",
      "title": "Root Url",
      "description": "Application base URL"
    },
    "defaultTimeout": {
      "type": "integer",
      "size": { "xs": 12, "sm": 6 },
      "uiType": "item",
      "title": "Default Timeout",
      "description": "Default timeout to wait for network idle"
    },
    "delayedDiscovery": {
      "type": "integer",
      "size": { "xs": 12, "sm": 6 },
      "uiType": "item",
      "title": "Delayed Discovery",
      "description": "Wait until performing discovery"
    },

    "aliases": {
      "type": "object",
      "title": "",
      "uiType": "tabs",
      "properties": {
        "urlReplacers": {
          "type": "array",
          "uiIndex": 0,
          "size": { "xs": 12 },
          "uiType": "tab",
          "title": "URL Replacers",
          "description": "Used to merge multiple URLs into one. Usually then dealing with paths that contain unique identifiers",
          "items": { "$ref": "#/definitions/URLReplace" }
        },
        "info": {
          "title": "Info Selectors",
          "uiType": "tab",
          "uiIndex": 1,
          "description": "Selectors to extract information from the page",
          "type": "array",
          "items": { "$ref": "#/definitions/Alias" }
        },
        "action": {
          "title": "Action Selectors",
          "uiType": "tab",
          "uiIndex": 2,
          "description": "Selectors to perform actions on the page",
          "type": "array",
          "items": { "$ref": "#/definitions/Alias" }
        },
        "input": {
          "title": "Input Selectors",
          "uiType": "tab",
          "uiIndex": 3,
          "description": "Selectors to input data into the page",
          "type": "array",
          "items": { "$ref": "#/definitions/Alias" }
        },
        "iterators": {
          "title": "Iterators",
          "uiType": "tab",
          "uiIndex": 4,
          "description": "Elements that repeat on the page",
          "type": "array",
          "items": { "$ref": "#/definitions/IdentifierAlias" }
        },
        "optimizer": {
          "title": "Optimizer",
          "uiType": "tab",
          "uiIndex": 5,
          "description": "Optimizer tuning",
          "type": "object",
          "properties": {
            "exclude": {
              "title": "Exclude",
              "type": "array",
              "items": { "$ref": "#/definitions/Exclude" }
            },
            "priority": {
              "title": "Priority",
              "type": "array",
              "items": { "title": "Priority", "type": "string" }
            }
          }
        },
        "store": {
          "title": "Store",
          "uiType": "tab",
          "uiIndex": 6,
          "description": "Runtime initial store",
          "type": "array",
          "properties": {
            "key": {
              "type": "string",
              "title": "Key",
              "size": { "xs": 12, "sm": 6 },
              "description": "Store key"
            },
            "value": {
              "type": "string",
              "title": "Value",
              "size": { "xs": 12, "sm": 6 },
              "description": "Store value"
            }
          }
        },
        "hack": {
          "title": "Hack",
          "uiType": "tab",
          "uiIndex": 7,
          "description": "Inject JS at Runtime",
          "type": "object",
          "properties": {
            "pre": {
              "type": "string",
              "title": "Pre-Render Script",
              "inputType": "textarea",
              "size": { "xs": 12, "sm": 6 }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Exclude": {
      "title": "Exclude",
      "type": "object",
      "properties": {
        "regex": {
          "type": "string",
          "size": { "xs": 12, "sm": 5 },
          "uiType": "item",
          "title": "Regex",
          "description": "Replace existing matches with alias",
          "registryKey": "selectors",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "name": {
          "type": "string",
          "title": "Name",
          "uiType": "item",
          "size": { "xs": 12, "sm": 5 },
          "description": "Exclude name"
        },
        "type": {
          "type": "string",
          "title": "Type",
          "enum": ["tag", "attribute"],
          "uiType": "item",
          "size": { "xs": 12, "sm": 2 }
        }
      }
    },
    "URLReplace": {
      "type": "object",
      "title": "URL Replacer",
      "description": "URL Replacer",
      "anyOf": [
        { "required": ["alias", "regex"] },
        { "required": ["alias", "value"] },
        { "required": ["alias", "value", "regex"] }
      ],
      "properties": {
        "alias": {
          "type": "string",
          "size": { "xs": 12, "sm": 2 },
          "uiType": "item",
          "title": "Alias",
          "description": "Alias"
        },
        "regex": {
          "type": "string",
          "size": { "xs": 12, "sm": 6 },
          "uiType": "item",
          "title": "Regex",
          "description": "Replace existing matches with alias"
        },
        "value": {
          "type": "string",
          "size": { "xs": 12, "sm": 4 },
          "uiType": "item",
          "title": "Exact Match",
          "description": "Replace all exact matches with alias"
        }
      }
    },
    "Alias": {
      "type": "object",
      "title": "Group Selectors",
      "description": "Alias",
      "required": ["name", "selectors"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "size": { "xs": 12, "sm": 6 },
          "description": "Alias name"
        },
        "selectors": {
          "type": "array",
          "size": { "xs": 12, "sm": 6 },
          "registryKey": "selectors",
          "title": "Selectors",
          "description": "CSS Selector",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "IdentifierAlias": {
      "type": "object",
      "title": "Alias",
      "description": "Alias",
      "required": ["name", "selectors"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "uiType": "item",
          "size": { "xs": 12, "sm": 6 },
          "description": "Alias name"
        },
        "selectors": {
          "type": "array",
          "registryKey": "selectors",
          "title": "Selectors",
          "description": "CSS Selector",
          "uniqueItems": true,
          "uiType": "item",
          "size": { "xs": 12, "sm": 6 },
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "identifier": {
          "type": "string",
          "title": "Identifier",
          "uiType": "item",
          "size": { "xs": 12 },
          "description": "CSS Selector"
        },
        "elements": {
          "type": "array",
          "uiType": "container",
          "size": { "xs": 12 },
          "title": "Elements",
          "description": "Elements",
          "items": { "$ref": "#/definitions/Identifier" }
        }
      }
    },
    "Identifier": {
      "type": "object",
      "title": "Element",
      "description": "Element",
      "required": ["name", "selector"],
      "uiType": "container",
      "properties": {
        "selector": {
          "type": "string",
          "title": "Selector",
          "uiType": "item",
          "size": { "xs": 12, "sm": 6 },
          "description": "CSS Selector"
        },
        "name": {
          "type": "string",
          "title": "Name",
          "uiType": "item",
          "size": { "xs": 12, "sm": 6 },
          "description": "Identifier name"
        }
      }
    }
  }
}
