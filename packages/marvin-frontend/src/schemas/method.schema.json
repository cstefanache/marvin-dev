{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Page Action",
  "required": ["method"],
  "properties": {
    "method": {
      "type": "string",
      "title": "Method Name",
      "placeholder": "Method Name",
      "size": { "xs": 12 }
    },
    "isGlobal": {
      "type": "boolean",
      "title": "Global Method",
      "size": { "xs": 12 }
    },
    "sequence": {
      "type": "array",
      "title": "Sequence",
      "items": { "$ref": "#/definitions/SequenceItem" }
    }
  },
  "definitions": {
    "SequenceItem": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "placeholder": "Type",
          "title": "Type",
          "enum": [
            "check",
            "click",
            "clearAndFill",
            "fill",
            "noAction",
            "keyEvent"
          ],
          "size": { "xs": 12 }
        },
        "locator": {
          "type": "string",
          "title": "Locator",
          "placeholder": "Locator",
          "size": { "xs": 12 }
        },
        "store": {
          "type": "boolean",
          "title": "Store content or attribute value"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "store": { "const": true }
            }
          },
          "then": {
            "required": ["storeName"],
            "properties": {
              "storeName": {
                "type": "string",
                "title": "Store Name",
                "placeholder": "Store Name",
                "size": { "xs": 12 }
              },
              "storeAttribute": {
                "type": "string",
                "title": "Attribute Name",
                "placeholder": "Attribute Name",
                "size": { "xs": 12 }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "check" }
            }
          },
          "then": {
            "properties": {
              "op": {
                "type": "string",
                "title": "Operator",
                "enum": [
                  "eq",
                  "neq",
                  "gt",
                  "lt",
                  "gte",
                  "lte",
                  "contains",
                  "doesNotContain"
                ],
                "size": { "xs": 12 }
              },
              "isNumber": {
                "type": "boolean",
                "title": "Is Number",
                "size": { "xs": 12 }
              },
              "process": {
                "type": "string",
                "title": "Post process value",
                "placeholder":"Post process value",
                "size": { "xs": 12 }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "keyEvent" }
            }
          },
          "then": {
            "properties": {
              "keyEvent": {
                "type": "string",
                "title":"Key Event",
                "placeholder":"Key event",
                "size": { "xs": 12 }
              }
            }
          }
        }
      ]
    }
  }
}
